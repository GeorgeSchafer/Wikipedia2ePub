{
  "name": "Wikipedia2ePub",
  "description": "Quickly exports Wikipedia articles to ePub files.",
  "version": "0.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["content-script.mjs"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "export-arrow.svg"
  }
}
